<?xml version="1.0" encoding="UTF-8"?>
<mule
  xmlns="http://www.mulesoft.org/schema/mule/core"
  xmlns:api-gateway="http://www.mulesoft.org/schema/mule/api-gateway"
  xmlns:apikit="http://www.mulesoft.org/schema/mule/mule-apikit"
  xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
  xmlns:http="http://www.mulesoft.org/schema/mule/http"
  xmlns:secure-properties="http://www.mulesoft.org/schema/mule/secure-properties"
  xmlns:tls="http://www.mulesoft.org/schema/mule/tls"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation=" http://www.mulesoft.org/schema/mule/mule-apikit http://www.mulesoft.org/schema/mule/mule-apikit/current/mule-apikit.xsd  http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/mule-http.xsd  http://www.mulesoft.org/schema/mule/tls http://www.mulesoft.org/schema/mule/tls/current/mule-tls.xsd http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/mule.xsd http://www.mulesoft.org/schema/mule/secure-properties http://www.mulesoft.org/schema/mule/secure-properties/current/mule-secure-properties.xsd http://www.mulesoft.org/schema/mule/api-gateway http://www.mulesoft.org/schema/mule/api-gateway/current/mule-api-gateway.xsd">
  <global-property
    doc:name="Environment Global Property"
    doc:id="334b9492-ae45-414d-a815-7065d5296197"
    name="mule.env"
    value="dev" />
  <global-property
    doc:name="Secure Global Property"
    doc:id="59249cb6-5842-45cf-b233-2a15bcf95ba2"
    name="secure.key"
    value="mule" />
  <configuration-properties
    doc:name="configurationProperties"
    doc:id="e5b34047-8453-42e0-b0c2-a9c9a98bad78"
    file="properties/secure-${mule.env}.yaml" />
  <configuration-properties
    doc:name="commonProperties"
    doc:id="4eeab716-2c5a-41ad-9b20-0203e1e9f6d7"
    file="properties\common-properties.yaml" />
  <tls:context
    name="tlsContext"
    doc:name="TLS Context"
    doc:id="be3aa6d9-774a-4c67-bf62-c01f3ce3c5f6">
    <tls:key-store
      type="${tls.type}"
      path="${tls.path}"
      alias="${tls.alias}"
      keyPassword="${secure::tls.password}"
      password="${secure::tls.password}" />
  </tls:context>
  <http:listener-config name="httpsListenerConfig">
    <http:listener-connection
      host="${https.host}"
      port="${https.port}"
      protocol="HTTPS"
      readTimeout="${https.timeout}"
      tlsContext="tlsContext" />
  </http:listener-config>
  <apikit:config
    name="heaCanvasSapiConfig"
    api="resource::9a250305-af4c-41d4-9969-55b5128b5b10:hea-canvas-sapi:1.0.5:raml:zip:hea-canvas-sapi.raml"
    outboundHeadersMapName="outboundHeaders"
    httpStatusVarName="httpStatus" />
  <secure-properties:config
    name="securePropertiesConfig"
    doc:name="Secure Properties Config"
    doc:id="39a29acd-6f71-4600-b2c2-4b3200da20b7"
    file="properties/secure-${mule.env}.yaml"
    key="${secure.key}">
    <secure-properties:encrypt algorithm="Blowfish" />
  </secure-properties:config>
  <http:request-config
    name="httpsCanvasRequestConfig"
    doc:name="HTTP Request configuration"
    doc:id="dea53ad3-bbc4-43d8-93f1-342722af43ef"
    basePath="${canvas.path}">
    <http:request-connection
      protocol="HTTPS"
      host="${canvas.host}">
      <tls:context>
        <tls:trust-store insecure="true" />
      </tls:context>
    </http:request-connection>
  </http:request-config>
  <configuration
    doc:name="Configuration"
    doc:id="11d9db9a-6e3c-43b3-b9be-f315febc1f5e"
    defaultErrorHandler-ref="global-error-handler" />
  <api-gateway:autodiscovery
    apiId="${secure::api.id}"
    ignoreBasePath="true"
    doc:name="API Autodiscovery"
    doc:id="adf1e9b3-3ffa-4380-a946-92677b4ebed6"
    flowRef="hea-canvas-sapi-main" />
</mule>
