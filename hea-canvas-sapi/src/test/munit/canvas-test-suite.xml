<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:munit="http://www.mulesoft.org/schema/mule/munit" xmlns:munit-tools="http://www.mulesoft.org/schema/mule/munit-tools"
	xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xsi:schemaLocation="
		http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/mule.xsd
		http://www.mulesoft.org/schema/mule/munit http://www.mulesoft.org/schema/mule/munit/current/mule-munit.xsd
		http://www.mulesoft.org/schema/mule/munit-tools  http://www.mulesoft.org/schema/mule/munit-tools/current/mule-munit-tools.xsd">
	<munit:config name="canvas-test-suite.xml" />
	<munit:test name="canvas-test-suite-request-canvas-sub-flow" doc:id="f03285c2-e5c7-4625-adec-3b70c02935a8" description="Test to successful execution of Canvas Api request ">
		<munit:behavior >
			<munit:set-event doc:name="Set Event" doc:id="fc04d795-f571-4578-9002-4bc7fc5ff091" >
				<munit:variables >
					<munit:variable key="canvasPath" value='#["/user"]' />
					<munit:variable key="method" value="POST" />
				</munit:variables>
			</munit:set-event>
			<munit-tools:mock-when doc:name="Mock when" doc:id="986129b1-4a4c-4d2e-a462-30bc3f893245" processor="http:request">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Canvas API" attributeName="doc:name" />
					<munit-tools:with-attribute whereValue="609d8e70-f848-469f-8436-39f66871fd4f" attributeName="doc:id" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value="#[output application/json --- readUrl('classpath://getuser/mock_payload.dwl')]" mediaType="application/json" encoding="UTF-8" />
					<munit-tools:attributes value="#[readUrl('classpath://getuser/mock_attributes.dwl')]" />
					<munit-tools:variables >
						<munit-tools:variable key="isError" value="#[false]" />
					</munit-tools:variables>
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<flow-ref doc:name="request-canvas-sub-flow" doc:id="86dd6901-4323-4850-83ad-6e68dc718776" name="request-canvas-sub-flow"/>
		</munit:execution>
		<munit:validation >
			<munit-tools:assert-equals doc:name="Assert equals" doc:id="4485cdd2-2490-4ac9-9e86-b2b939ec9f4a" actual="#[vars.isError]" expected="#[false]"/>
		</munit:validation>
	</munit:test>
	<munit:test name="canvas-test-suite-bad-request" doc:id="5eed4a39-e775-4008-b9d8-d3e8f3dccae7" description="Test to validate bad request to Canvas Api request">
		<munit:behavior >
			<munit:set-event doc:name="Set Event" doc:id="dedf4897-ec88-4b3c-94ee-839353355026" >
				<munit:variables >
					<munit:variable key="canvasPath" value='#["/user"]' />
					<munit:variable key="method" value="POST" />
				</munit:variables>
			</munit:set-event>
			<munit-tools:mock-when doc:name="Mock when" doc:id="f3475599-2186-4c20-9b8d-255780ac6919" processor="http:request" >
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Canvas API" attributeName="doc:name" />
					<munit-tools:with-attribute whereValue="609d8e70-f848-469f-8436-39f66871fd4f" attributeName="doc:id" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value="#[output application/json --- readUrl('classpath://getuser/mock_payload.dwl')]" mediaType="application/json" encoding="UTF-8" />
					<munit-tools:error typeId="HTTP:BAD_REQUEST" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<flow-ref doc:name="request-canvas-sub-flow" doc:id="c56f8444-4ac5-43b4-ab5a-c51320e5c77b" name="request-canvas-sub-flow" />
		</munit:execution>
		<munit:validation >
			<munit-tools:assert-equals doc:name="Assert equals" doc:id="a63b0da9-2931-40cd-acaa-f8bd0eaa0068" actual="#[vars.isError]" expected="#[true]" />
		</munit:validation>
	</munit:test>
	<munit:test name="canvas-test-suite-connectivity" doc:id="eebea2af-cd8a-473e-8dfe-2ffdce2553ef" description="Test to validate http connectivity error on Canvas Api request">
		<munit:behavior >
			<munit:set-event doc:name="Set Event" doc:id="3ea7ecfc-5073-4b6c-828f-dbf4bbcaf519" >
				<munit:variables >
					<munit:variable key="canvasPath" value='#["/user"]' />
					<munit:variable key="method" value="POST" />
				</munit:variables>
			</munit:set-event>
			<munit-tools:mock-when doc:name="Mock when" doc:id="20895398-0dbd-4a1b-85bd-420a5796b9ed" processor="http:request" >
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Canvas API" attributeName="doc:name" />
					<munit-tools:with-attribute whereValue="609d8e70-f848-469f-8436-39f66871fd4f" attributeName="doc:id" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value="#[output application/json --- readUrl('classpath://getuser/mock_payload.dwl')]" mediaType="application/json" encoding="UTF-8" />
					<munit-tools:error typeId="HTTP:CONNECTIVITY" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<flow-ref doc:name="request-canvas-sub-flow" doc:id="cc9ef67c-6571-47c3-8198-4c7fcc9936dc" name="request-canvas-sub-flow" />
		</munit:execution>
		<munit:validation >
			<munit-tools:assert-equals doc:name="Assert equals" doc:id="c7fdb8ae-19cc-42dc-8cd6-042f8d0d8808" actual="#[vars.isError]" expected="#[true]" />
		</munit:validation>
	</munit:test>

</mule>
