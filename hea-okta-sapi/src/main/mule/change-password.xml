<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xmlns:http="http://www.mulesoft.org/schema/mule/http"
	xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/mule.xsd
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/mule-http.xsd
http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/mule-ee.xsd">
	<sub-flow name="post-change-password-sub-flow" doc:id="0f47ee30-4599-4a45-a3ad-37cee4de679a" >
		<logger level="INFO" doc:name="Start Logger" doc:id="3706b295-7f1d-4699-80e9-78d74443c507" message="Start post-change-password-sub-flow" category="${logger.category}.post-change-password-sub-flow" />
		<ee:transform doc:name="Var requestPayload/path/method" doc:id="d40479a5-e4b4-49e4-ba54-3cb7f47f82a2" >
			<ee:variables >
				<ee:set-variable resource="dwl/post-change-password-request.dwl" variableName="requestPayload" />
				<ee:set-variable variableName="method" ><![CDATA[p('okta.changePassword.method')]]></ee:set-variable>
				<ee:set-variable variableName="path" ><![CDATA[p('okta.changePassword.path')]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
		<logger level="INFO" doc:name="INFO: Before Okta Request call" doc:id="6922768e-e653-403c-ad96-39dd46b2b31b" message="Before request-okta-sub-flow call" category="${logger.category}.post-change-password-sub-flow" />
		<flow-ref doc:name="request-okta-sub-flow" doc:id="63a497e0-4a8e-4169-b153-24bf2514e3c4" name="request-okta-sub-flow"/>
		<logger level="INFO" doc:name="INFO: After Okta Request call" doc:id="22a3874e-d917-4781-9fcd-587cbab7522f" message="After request-okta-sub-flow call" category="${logger.category}.post-change-password-sub-flow" />
		<choice doc:name="Check isError" doc:id="069d6b03-9f4e-420a-9e9a-0970a1ea528f">
			<when expression="#[vars.isError == true]">
				<raise-error doc:name="HEA_OKTA_SAPI:CHANGE_PASSWORD_FAILED" doc:id="43c6084d-3d70-41af-9d21-7018b8ca08ee" type="HEA_OKTA_SAPI:CHANGE_PASSWORD_FAILED" description="#[payload]" />
			</when>
			<otherwise>
				<logger level="INFO" doc:name="INFO Logger" doc:id="32f20adb-76e4-4ae4-97d1-18d5774c7d08" message="Change Password requested successfully." category="${logger.category}.post-change-password-sub-flow" />
				<ee:transform doc:name="Response" doc:id="4b4ec7ea-82e7-46de-89a2-9ffe747c76b5">
			<ee:message>
						<ee:set-payload resource="dwl/post-change-password-response.dwl" />
			</ee:message>
		</ee:transform>
			</otherwise>
		</choice>
		<logger level="INFO" doc:name="End Logger" doc:id="0c80fbb3-5426-48a6-8e54-6b433a1d64ec" message="End post-change-password-sub-flow" category="${logger.category}.post-change-password-sub-flow" />
	</sub-flow>
</mule>
